<h1>Dashboard</h1>
<h2>Welcome {{ name }}</h2>
<p>Here are the stories for you</p>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
            <tr>
                <td><a href="/stories/{{_id}}"></a>{{title}}</td>
                <td>{{createdAt}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td></td>
            </tr>
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories</p>
{{/if}}